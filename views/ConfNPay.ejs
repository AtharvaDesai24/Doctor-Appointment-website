<% layout("layout/navbar.ejs") %>
    <title>Confirm & Pay - Doctor Appointment</title>
    <link rel="stylesheet" href="/ConfNPay.css" >
</head>
<body>
    <div class="container">
        <header class="header">
            <button class="back-btn">←</button>
            <h1 class="header-title">Confirm & Pay</h1>
      
        </header>

        <div class="content">
            <div class="left-section">
                <div class="doctor-section">
                    <div class="doctor-header">
                        <div class="online-indicator"></div>
                        <span class="doctor-status"><%= name %> - <%= Speciality %></span>
                    </div>
                    

                    
                    <p class="availability-text">Available for consultation - Response within 5 minutes.</p>
                    
                    <ul class="feature-list">
                        <li class="feature-item">
                            <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            96% of patients found online consultation helpful
                        </li>
                        <li class="feature-item">
                            <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                            </svg>
                            Consultation available via video call or chat
                        </li>
                    </ul>
                </div>

                <div class="form-section">
                    <div class="form-group">
                        <label class="form-label" for="patientName">Patient name</label>
                        <input type="text" id="patientName" class="form-input" placeholder="Enter full name">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="phoneNumber">Phone number</label>
                        <input type="tel" id="phoneNumber" class="form-input" placeholder="Enter phone number">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="appointmentTime">Slot Selected</label>
                        <input type="datetime-local" id="appointmentTime" class="form-input">
                    </div>
                    
                    <a href="#" class="coupon-link">Have a coupon code?</a>
                </div>

                <div class="fee-section">
                    <div class="fee-label">Consultation Fee</div>
                    <div class="fee-amount">
                        <span class="currency">₹</span><%= fees %>
                    </div>
                </div>

                <button class="continue-btn" onclick="processPayment()">Continue to payment</button>
            </div>

            <div class="right-section">
                <!--<div class="promo-section">
                    <div class="promo-icon">₹</div>
                    <h3 class="promo-title">3x more affordable!</h3>
                    <p class="promo-text">
                        Get quality healthcare at affordable prices,
                        up to 3 times less than traditional clinic visits.
                    </p>
                </div>-->
                <img src="https://i.ytimg.com/vi/tevIVKOUZWo/maxresdefault.jpg" alt="he heee" height="100%" width="100%">
            </div>
        </div>
    </div>

    <script defer>
        function processPayment() {
            const patientName = document.getElementById('patientName').value;
            const phoneNumber = document.getElementById('phoneNumber').value;
            const appointmentTime = document.getElementById('appointmentTime').value;
            
            if (!patientName || !phoneNumber || !appointmentTime) {
                alert('Please fill in all required fields');
                return;
            }
            
            // Simulate payment processing
            const btn = document.querySelector('.continue-btn');
            btn.textContent = 'Processing...';
            btn.disabled = true;
            
            setTimeout(() => {
                alert('Payment successful! Your appointment is confirmed.');
                btn.textContent = 'Continue to payment';
                btn.disabled = false;
            }, 2000);
        }

        // Add smooth interactions
        document.querySelector('.back-btn').addEventListener('click', () => {
            window.history.back();
        });

     

        // Form validation
        const inputs = document.querySelectorAll('.form-input');
        inputs.forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value.trim() === '') {
                    this.style.borderColor = '#ef4444';
                } else {
                    this.style.borderColor = '#d1d5db';
                }
            });
        });
    </script>
</body>
</html>